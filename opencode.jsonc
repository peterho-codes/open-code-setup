{
  "$schema": "https://opencode.ai/config.json",
  
  // Theme
  "theme": "opencode",
  
  // Agent configuration
  "agent": {
    "build": {
      "prompt": "Read AGENTS.md for detailed instructions"
    }
  },

  // Instructions - reference your AGENTS.md
  "instructions": ["AGENTS.md"],

  // File watching - exclude patterns
  "watcher": {
    "ignore": [
      // Version control & environments
      ".git/**",
      ".venv/**",
      "venv/**",
      "__pycache__/**",
      "*.pyc",
      
      // Data files (prevent watching large data files)
      "data/**",
      "datasets/**",
      "*.csv",
      "*.parquet",
      "*.feather",
      "*.xlsx",
      "*.tsv",
      "*.db",
      "*.sqlite",
      "*.duckdb",
      
      // Model files (too large to watch)
      "models/**",
      "checkpoints/**",
      "*.pkl",
      "*.joblib",
      "*.h5",
      "*.pt",
      "*.pth",
      "*.onnx",
      "*.safetensors",
      
      // Outputs & logs
      "outputs/**",
      "logs/**",
      "*.log",
      ".ipynb_checkpoints/**",
      "experiments/**",
      "runs/**",
      "wandb/**",
      "mlruns/**",
      
      // Build artifacts
      "dist/**",
      "build/**",
      "*.egg-info/**",
      
      // Backups & temp
      "*.bak",
      "*.tmp",
      "*.swp",
      
      // Common noisy directories
      "node_modules/**",
      ".cache/**",
      ".pytest_cache/**",
      ".mypy_cache/**",
      ".ruff_cache/**",
      
      // Cloud/data engineering
      "dbt_packages/**",
      ".dbt/**",
      "target/**",