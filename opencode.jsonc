{
  "$schema": "https://opencode.ai/config.json",
  
  "project": {
    "name": "data-science-project",
    "strict_mode": false
  },

  "agents": {
    "build": {
      "systemPrompt": "Read AGENTS.md for detailed instructions"
    }
  },

  "files": {
    "maxFileSize": 5000000,
    "exclude": [
      // Version control & environments
      ".git/**",
      ".venv/**",
      "venv/**",
      "__pycache__/**",
      "*.pyc",
      
      // Data files (never include in context)
      "data/**",
      "datasets/**",
      "*.csv",
      "*.parquet",
      "*.feather",
      "*.xlsx",
      
      // Model files (too large)
      "models/**",
      "checkpoints/**",
      "*.pkl",
      "*.joblib",
      "*.h5",
      "*.pt",
      "*.pth",
      
      // Outputs & logs
      "outputs/**",
      "logs/**",
      "*.log",
      ".ipynb_checkpoints/**",
      
      // Build artifacts
      "dist/**",
      "build/**",
      "*.egg-info/**",
      
      // Backups & temp
      "*.bak",
      "*.tmp",
      "*.swp"
    ]
  },

  "customCommands": {
    "test": "pytest tests/ -v --cov",
    "format": "ruff format .",
    "lint": "ruff check .",
    "typecheck": "mypy .",
    "install": "uv sync",
    "clean": "find . -type d -name __pycache__ -exec rm -rf {} +"
  }
}