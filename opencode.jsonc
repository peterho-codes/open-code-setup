{
  "$schema": "https://opencode.ai/config.json",
  
  // Theme
  "theme": "opencode",
  
  // Agent configuration
  "agent": {
    "build": {
      "prompt": "Read AGENTS.md for detailed instructions"
    }
  },

  // Instructions - reference your AGENTS.md
  "instructions": ["AGENTS.md"],

  // File watching - exclude patterns
  "watcher": {
    "ignore": [
      // Version control & environments
      ".git/**",
      ".venv/**",
      "venv/**",
      "__pycache__/**",
      "*.pyc",
      
      // Data files (prevent watching large data files)
      "data/**",
      "datasets/**",
      "*.csv",
      "*.parquet",
      "*.feather",
      "*.xlsx",
      "*.tsv",
      "*.db",
      "*.sqlite",
      "*.duckdb",
      
      // Model files (too large to watch)
      "models/**",
      "checkpoints/**",
      "*.pkl",
      "*.joblib",
      "*.h5",
      "*.pt",
      "*.pth",
      "*.onnx",
      "*.safetensors",
      
      // Outputs & logs
      "outputs/**",
      "logs/**",
      "*.log",
      ".ipynb_checkpoints/**",
      "experiments/**",
      "runs/**",
      "wandb/**",
      "mlruns/**",
      
      // Build artifacts
      "dist/**",
      "build/**",
      "*.egg-info/**",
      
      // Backups & temp
      "*.bak",
      "*.tmp",
      "*.swp",
      
      // Common noisy directories
      "node_modules/**",
      ".cache/**",
      ".pytest_cache/**",
      ".mypy_cache/**",
      ".ruff_cache/**",
      
      // Cloud/data engineering
      "dbt_packages/**",
      ".dbt/**",
      "target/**",
      ".terraform/**"
    ]
  },

  // Custom commands
  "command": {
    "test": {
      "template": "Run pytest with coverage:\n```bash\npytest tests/ -v --cov\n```\nShow results and suggest fixes for any failures.",
      "description": "Run tests with coverage"
    },
    "format": {
      "template": "Format all Python code using ruff:\n```bash\nruff format .\n```",
      "description": "Format code with ruff"
    },
    "lint": {
      "template": "Check code quality with ruff:\n```bash\nruff check .\n```\nReport all issues found.",
      "description": "Lint code with ruff"
    },
    "typecheck": {
      "template": "Run type checking with mypy:\n```bash\nmypy .\n```\nReport type errors and suggest fixes.",
      "description": "Type check with mypy"
    }
  },

  // Formatters - auto-format on file changes
  "formatter": {
    "ruff": {
      "command": ["ruff", "format", "$FILE"],
      "extensions": [".py"]
    }
  },

  // Permissions - require approval for potentially destructive operations
  "permission": {
    "bash": "ask",
    "edit": "ask"
  },

  // Share settings
  "share": "manual",

  // Auto-update behavior
  "autoupdate": "notify"
}